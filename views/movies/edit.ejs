<% include ../partials/header%>

<div class="container">
	<div class="row">
		<h1>Edit <%=movie.title%></h1>
		<div>
			<form action="/chart/<%= movie._id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="movie[title]" value="<%=movie.title%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="[year]" value="<%=movie.year%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="movie[poster]" value="<%=movie.poster%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" value="<%=movie.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Submit</button>
				</div>
			</form>
		</div>

		<a href="/chart">Go Back</a>
	</div>
</div>

<% include ../partials/footer%>